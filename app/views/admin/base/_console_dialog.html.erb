<div id="admin_console_dialog" 
     class="modal hide" 
     style="width:800px; min-height: 400px"
     tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Admin Console</h3>
  </div>

  <div class="modal-body">

    <div id="dialog-local-alerts"></div>

    <ul class="nav nav-tabs">
      <li class="active"><a href="#misc-tab" data-toggle="tab">Misc</a></li>
      <li><a href="#users-tab" data-toggle="tab">Users</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="misc-tab">
        <%= render 'misc' %>
      </div>

      <div class="tab-pane" id="users-tab">
        <%= render 'users' %>
      </div>
    </div>
    
  </div>

<% if false %>
  <div class="modal-footer">
    <button class="m-btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="m-btn blue btn-primary">Save changes</button>
  </div>
<% end %>
</div>